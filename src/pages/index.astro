---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, getEntry, render } from 'astro:content';

const page = await getEntry('pages', 'hem');
const { Content } = await render(page);

const behandlingar = (await getCollection('behandlingar')).sort((a, b) => a.data.order - b.data.order);
const nyheter = (await getCollection('nyheter')).sort((a, b) => b.data.date.getTime() - a.data.date.getTime()).slice(0, 3);
---

<BaseLayout title={page.data.title} description={page.data.description}>
  <!-- Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <img src="/images/hero.jpg" alt="" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-r from-brand-800/90 via-brand-700/80 to-brand-600/60"></div>
    </div>
    <div class="relative max-w-6xl mx-auto px-4 py-24 md:py-36">
      <div class="max-w-2xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight" style="font-family: 'Josefin Sans', sans-serif;">
          {page.data.hero_heading}
        </h1>
        <p class="text-xl md:text-2xl text-brand-100 mb-10 leading-relaxed">{page.data.hero_text}</p>
        <div class="flex flex-wrap gap-4">
          <a href="/kontakt" class="inline-flex items-center gap-2 bg-white text-brand-700 font-semibold px-8 py-4 rounded-xl hover:bg-brand-50 transition-all shadow-lg hover:shadow-xl">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
            </svg>
            Boka tid
          </a>
          <a href="/behandlingar" class="inline-block border-2 border-white/40 text-white font-semibold px-8 py-4 rounded-xl hover:bg-white/10 backdrop-blur-sm transition-all">
            Våra behandlingar
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- USP strip -->
  <section class="bg-white/60 backdrop-blur-sm border-y border-brand-100">
    <div class="max-w-6xl mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="flex flex-col items-center gap-2">
          <svg class="w-8 h-8 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
          </svg>
          <span class="font-semibold text-brand-700">Evidensbaserad vård</span>
          <span class="text-sm text-brand-500">Enligt nationella riktlinjer</span>
        </div>
        <div class="flex flex-col items-center gap-2">
          <svg class="w-8 h-8 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
          </svg>
          <span class="font-semibold text-brand-700">Personligt bemötande</span>
          <span class="text-sm text-brand-500">Vi tar oss tid för dig</span>
        </div>
        <div class="flex flex-col items-center gap-2">
          <svg class="w-8 h-8 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
          </svg>
          <span class="font-semibold text-brand-700">Ansluten till Försäkringskassan</span>
          <span class="text-sm text-brand-500">Automatiskt avdrag för tandvårdsstöd</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Content from markdown -->
  <section class="max-w-4xl mx-auto px-4 py-16">
    <div class="prose prose-lg max-w-none prose-headings:text-brand-700 prose-a:text-brand-500 prose-headings:font-bold" style="--tw-prose-headings: var(--color-brand-700);">
      <Content />
    </div>
  </section>

  <!-- Behandlingar -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-brand-700 mb-4" style="font-family: 'Josefin Sans', sans-serif;">Våra behandlingar</h2>
        <p class="text-brand-500 text-lg">Professionell tandvård för hela familjen</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {behandlingar.map((b, i) => (
          <a href={`/behandlingar/${b.id}`} class="group bg-white/70 backdrop-blur-sm rounded-2xl p-6 shadow-sm border border-brand-100 hover:shadow-lg hover:bg-white transition-all duration-300">
            {i === 0 && <img src="/images/behandling-allman.jpg" alt="" class="w-full h-40 object-cover rounded-xl mb-4" />}
            {i === 5 && <img src="/images/behandling-estetisk.jpg" alt="" class="w-full h-40 object-cover rounded-xl mb-4" />}
            <h3 class="text-lg font-bold text-brand-700 mb-2 group-hover:text-brand-500 transition-colors" style="font-family: 'Josefin Sans', sans-serif;">{b.data.title}</h3>
            <p class="text-brand-500 text-sm leading-relaxed">{b.data.description}</p>
            <span class="inline-block mt-4 text-brand-400 text-sm font-medium group-hover:translate-x-1 transition-transform">Läs mer →</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="bg-brand-600 rounded-3xl p-10 md:p-16 text-center text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-brand-700 to-brand-500 opacity-50"></div>
        <div class="relative">
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: 'Josefin Sans', sans-serif;">Boka din tid idag</h2>
          <p class="text-brand-100 text-lg mb-8 max-w-xl mx-auto">Ring oss eller skicka ett mejl — vi återkommer inom en arbetsdag.</p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="tel:+46733033442" class="inline-flex items-center gap-2 bg-white text-brand-700 font-semibold px-8 py-4 rounded-xl hover:bg-brand-50 transition-colors">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
              0733-03 34 42
            </a>
            <a href="mailto:info@tandomsorgen.se" class="inline-flex items-center gap-2 border-2 border-white/40 text-white font-semibold px-8 py-4 rounded-xl hover:bg-white/10 transition-colors">
              info@tandomsorgen.se
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Nyheter -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-brand-700 mb-4" style="font-family: 'Josefin Sans', sans-serif;">Senaste nytt</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {nyheter.map(n => (
        <a href={`/nyheter/${n.id}`} class="block bg-white/70 backdrop-blur-sm border border-brand-100 rounded-2xl p-6 hover:shadow-lg hover:bg-white transition-all duration-300">
          <time class="text-sm text-brand-400" datetime={n.data.date.toISOString().split('T')[0]}>
            {n.data.date.toLocaleDateString('sv-SE')}
          </time>
          <h3 class="text-lg font-bold text-brand-700 mt-2 mb-2" style="font-family: 'Josefin Sans', sans-serif;">{n.data.title}</h3>
          {n.data.description && <p class="text-brand-500 text-sm">{n.data.description}</p>}
        </a>
      ))}
    </div>
    <div class="text-center mt-8">
      <a href="/nyheter" class="text-brand-500 font-medium hover:text-brand-700 transition-colors">
        Visa alla nyheter →
      </a>
    </div>
  </section>
</BaseLayout>
