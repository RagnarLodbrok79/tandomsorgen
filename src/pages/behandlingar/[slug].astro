---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const behandlingar = await getCollection('behandlingar');
  return behandlingar.map(entry => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <section class="max-w-4xl mx-auto px-4 py-16">
    <nav class="mb-8">
      <a href="/behandlingar" class="text-brand-400 hover:text-brand-600 transition-colors text-sm font-medium">
        â† Tillbaka till alla behandlingar
      </a>
    </nav>
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 border border-brand-100">
      <div class="prose prose-lg max-w-none prose-headings:text-brand-700 prose-a:text-brand-500">
        <Content />
      </div>
    </div>
  </section>
</BaseLayout>
