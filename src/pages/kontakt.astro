---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry, render } from 'astro:content';

const page = await getEntry('pages', 'kontakt');
const { Content } = await render(page);
---

<BaseLayout title={page.data.title} description={page.data.description}>
  <section class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-brand-700 mb-8" style="font-family: 'Josefin Sans', sans-serif;">{page.data.title}</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 border border-brand-100">
        <div class="prose prose-lg max-w-none prose-headings:text-brand-700 prose-a:text-brand-500">
          <Content />
        </div>
      </div>
      <div class="space-y-6">
        <!-- Quick contact card -->
        <div class="bg-brand-600 text-white rounded-2xl p-8">
          <h2 class="text-xl font-bold mb-4" style="font-family: 'Josefin Sans', sans-serif;">Snabbkontakt</h2>
          <div class="space-y-4">
            <a href="tel:+46733033442" class="flex items-center gap-3 text-brand-100 hover:text-white transition-colors">
              <svg class="w-6 h-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
              <span class="text-lg font-semibold">0733-03 34 42</span>
            </a>
            <a href="mailto:info@tandomsorgen.se" class="flex items-center gap-3 text-brand-100 hover:text-white transition-colors">
              <svg class="w-6 h-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
              <span>info@tandomsorgen.se</span>
            </a>
            <div class="flex items-start gap-3 text-brand-100">
              <svg class="w-6 h-6 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
              </svg>
              <div>
                <p>Mässhantverksgatan 5</p>
                <p>598 40 Vimmerby</p>
              </div>
            </div>
          </div>
        </div>
        <!-- Opening hours card -->
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 border border-brand-100">
          <h2 class="text-xl font-bold text-brand-700 mb-4" style="font-family: 'Josefin Sans', sans-serif;">Öppettider</h2>
          <ul class="space-y-2 text-brand-600">
            <li class="flex justify-between"><span>Måndag</span><span class="font-medium">07:15–16:45</span></li>
            <li class="flex justify-between"><span>Tisdag–torsdag</span><span class="font-medium">07:15–15:45</span></li>
            <li class="flex justify-between"><span>Fredag</span><span class="font-medium">07:15–12:45</span></li>
            <li class="flex justify-between"><span>Lördag–söndag</span><span class="text-brand-400">Stängt</span></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
